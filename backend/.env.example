# Server
NODE_ENV=development
PORT=3001
API_VERSION=v1
FRONTEND_URL=http://localhost:5173

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/sop_db

# Redis
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=your-secret-key-change-in-production-use-long-random-string
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Google AI
GOOGLE_AI_API_KEY=your-gemini-api-key-here
AI_MODEL=gemini-1.5-pro
AI_MAX_RETRIES=3
AI_TIMEOUT_MS=30000

# OAuth (Optional - for future)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback

# Storage (Optional - for future)
S3_BUCKET=sop-exports
S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AI_RATE_LIMIT_MAX=5
AI_RATE_LIMIT_WINDOW_MS=60000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Monitoring (Optional - for future)
SENTRY_DSN=your-sentry-dsn

# Session
SESSION_EXPIRY_HOURS=24
WIZARD_SESSION_EXPIRY_HOURS=48
