# Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local or any file containing real API keys!

# =====================================================
# AI API Configuration
# =====================================================

# Google Gemini API Key
# Get your key from: https://makersuite.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# =====================================================
# Application Configuration
# =====================================================

# Environment (development, production, staging)
NODE_ENV=development

# Backend API URL (optional - for future backend proxy)
# VITE_API_URL=http://localhost:3000/api

# =====================================================
# Security Configuration
# =====================================================

# Storage Encryption Key (32 characters recommended)
# Generate with: openssl rand -base64 32
VITE_STORAGE_KEY=change_this_to_a_random_32_char_key

# Session Timeout (in milliseconds)
# Default: 30 minutes = 1800000ms
VITE_SESSION_TIMEOUT=1800000

# =====================================================
# Feature Flags
# =====================================================

# Enable/disable analytics tracking
VITE_ENABLE_ANALYTICS=false

# Enable debug logging (only for development)
VITE_ENABLE_DEBUG_LOGS=false

# Enable rate limiting
VITE_ENABLE_RATE_LIMITING=true

# =====================================================
# Rate Limiting Configuration
# =====================================================

# Maximum AI API requests per minute
VITE_MAX_AI_REQUESTS_PER_MINUTE=10

# Maximum AI API requests per hour
VITE_MAX_AI_REQUESTS_PER_HOUR=50
